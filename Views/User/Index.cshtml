<!DOCTYPE html>

<html lang="en">
<head>
    <title>Đăng nhập hệ thống lưu học sinh</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Content/img/logo.ico" />

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('../../Content/img/duhocsinh.jpg');
            background-size: cover;
            height: 100vh;
        }

        #login .container #login-row #login-column #login-box {
            margin-top: 120px;
            max-width: 600px;
            height: 320px;
            border: 1px solid #9C9C9C;
            background-color: #EAEAEA;
        }

            #login .container #login-row #login-column #login-box #login-form {
                padding: 20px;
            }

                #login .container #login-row #login-column #login-box #login-form #register-link {
                    margin-top: -85px;
                }
    </style>
</head>
<body>
    @*//id="myform" method="post" action="@Url.Action("Login", "User")"*@
    <div id="login">
        <h2 class="text-center pt-5" style="color:#f3c22a;">Hệ thống quản lí lưu học sinh - MTA</h2>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="myform" method="post" action="@Url.Action("Login", "User")">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Tài khoản:</label><br>
                                <input type="text" name="username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Mật khẩu:</label><br>
                                <input type="text" name="pass" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="remember-me" class="text-info"><span>Lưu mật khẩu</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script>
        $("#submitdata").click(function (e) {

            var username = $("[name='username']").val();
            var pass = $("[name='pass']").val();
            var savepass = $("[name='savepass']").val();
            var dataToPost = {
                username: usename,
                pass: pass,
                savepass: savepass
            };
            var dataToPost = $("#myform").serialize()
            $.ajax(
                {
                    type: "POST",
                    data: dataToPost,
                    url: "User/Login"
                })
        })

    </script>
    <script>

        var mess = '@ViewBag.messe';
        if(mess!="")
        alert("Thông tin đăng nhập không chính xác");
    </script>
</body>
</html>